<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInput">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="122dp"
        android:layout_height="0dp"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/ProfessorName"
        app:layout_constraintEnd_toEndOf="@+id/ProfessorName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_final" />

    <EditText
        android:id="@+id/ProfessorName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="483dp"
        android:ems="10"
        android:hint="Proffessor Name(Last Name, First Name)"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/savebutton_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/CourseNumber"
        android:layout_width="123dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="166dp"
        android:ems="10"
        android:hint="CRN"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Semster"
        android:layout_width="145dp"
        android:layout_height="51dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="166dp"
        android:ems="10"
        android:hint="Semester"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Difficulty"
        android:layout_width="134dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="232dp"
        android:ems="10"
        android:hint="Difficulty"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/CourseRating"
        android:layout_width="177dp"
        android:layout_height="48dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="232dp"
        android:ems="10"
        android:hint="Course Rating"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Grade"
        android:layout_width="144dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="281dp"
        android:ems="10"
        android:hint="Grade Recieved"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Comments"
        android:layout_width="366dp"
        android:layout_height="265dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="338dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Add Specific Assessments"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/savebutton_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="42dp"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfessorName" />

</androidx.constraintlayout.widget.ConstraintLayout>